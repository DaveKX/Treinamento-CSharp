<MudDialog>
    <TitleContent>
        <MudText Typo=Typo.h6>Editar Pessoa</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm Model="@pessoa">
            <MudTextField T="string" Label="Nome" For="@(() => pessoa.Nome)" @bind-Value="@pessoa.Nome" />
            <MudTextField T="string" Label="Telefone" For="@(() => pessoa.Telefone)" @bind-Value="@pessoa.Telefone" />
            <MudTextField T="string" Label="Endereço" For="@(() => pessoa.Endereço)" @bind-Value="@pessoa.Endereço" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color=Color.Primary OnClick="Submit">Confirmar</MudButton>
        <MudButton Color=Color.Error OnClick="Cancel">Cancelar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    [Parameter] public Pessoa pessoa { get; set; }
    // [Parameter] public EventCallback adicionar { get; set; }

    protected override void OnInitialized()
    {
        if(pessoa == null)
        {
            pessoa = new();
        }
    }

    private void Submit() => MudDialog.Close(DialogResult.Ok(true));

    private void Cancel() => MudDialog.Cancel();
}
